<UserControl xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:viewModels="clr-namespace:Premix.ViewModels"
            x:DataType="viewModels:FuncEntregasPageViewModel"
            mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="600"
            x:Class="Premix.Views.FuncEntregasPageView">
 <Design.DataContext><viewModels:FuncEntregasPageViewModel></viewModels:FuncEntregasPageViewModel></Design.DataContext>
          
  <UserControl.Styles>
    <StyleInclude Source="avares://Premix/Styles/FuncPremixStyles.axaml"/>
  </UserControl.Styles>



 <ScrollViewer Background="Black">
   <StackPanel Margin="34,24,34,34" Spacing="18">


     <!-- TÍTULO -->
     <TextBlock Text="Tarefas"
                FontSize="28"
                FontWeight="Bold"
                Foreground="White"
                />


     <!-- FILTROS -->
     <StackPanel Orientation="Horizontal" Spacing="12" Margin="20 0 0 0">
       <TextBlock Text="Filtro:" Foreground="Gray" FontSize="16" Margin="0,6,0,0"/>


       <!-- Caixa de busca -->
       <Grid Width="300">
         <TextBox x:Name="SearchBox"
                  Watermark="Pesquisar Tarefa"
                  Background="#0C0C0C"
                  Foreground="White"
                  BorderBrush="#3B1D65"
                  BorderThickness="1"
                  CornerRadius="18"
                  Padding="14,8,38,8"
                  KeyUp="OnSearchKeyUp"/>
         <TextBlock Text="🔍"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,12,0"
                    IsHitTestVisible="False"
                    Foreground="Gray"/>
       </Grid>


       <!-- Botões de filtro -->
       <Button Content="Todas ⌄" Click="OnTodasClick" Margin="5,0" BorderBrush="#3B1D65" CornerRadius="22" Background="#0C0C0C"/>
       <Button Content="Minhas Tarefas ⌄" Click="OnMinhasClick" Margin="5,0" CornerRadius="22" BorderBrush="#3B1D65" Background="#0C0C0C"/>
     </StackPanel>


     <!-- CARD DE TAREFA -->
     <Border Background="#111111" Margin="0 50 160 0" HorizontalAlignment="Left"
             CornerRadius="14"
             BorderBrush="#3B1D65"
             BorderThickness="2"
             Width="760">
       <StackPanel>


         <!-- Cabeçalho -->
         <Border Background="#3B1D65"
                 CornerRadius="12,12,0,0"
                 Padding="18,14">
           <StackPanel Orientation="Horizontal" Spacing="20">
             <TextBlock Text="[nome Tarefa]" FontSize="18" Foreground="White" FontWeight="SemiBold"/>
             <TextBlock Text="Prazo: 9 de Fevereiro de 2023" Foreground="White"/>
           </StackPanel>
         </Border>


         <!-- Corpo -->
         <Grid ColumnDefinitions="*,Auto">
           <StackPanel Spacing="12" Width="360" Margin="20">
             <TextBlock Text="[Nome Departamento]" Foreground="White" FontWeight="Bold"/>
             <TextBlock Foreground="LightGray" TextWrapping="Wrap">
               Lorem ipsum dolor sit amet, consectetur adipiscing elit.
             </TextBlock>
             <Button Content="Entregar Tarefa" Background="#3B1D65" Foreground="White"
                     CornerRadius="12" Padding="18,10"
                     Click="OnEntregarClick"/>
           </StackPanel>


           <!-- Área de upload -->
           <Border Grid.Column="1"
                   x:Name="DropZone"
                   Width="300" Height="170"
                   Margin="28,20,20,20"
                   Background="#000000"
                   BorderBrush="#3B1D65"
                   BorderThickness="2"
                   CornerRadius="12"
                   >
             <TextBlock x:Name="DropText"
                        Text="Arraste aqui seu arquivo"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextAlignment="Center"
                        Foreground="LightGray"/>
           </Border>
         </Grid>
       </StackPanel>
     </Border>


     <!-- Texto de status -->
     <TextBlock x:Name="StatusText"
                Foreground="Gray"
                FontSize="12"/>
   </StackPanel>
 </ScrollViewer>
          
</UserControl>

