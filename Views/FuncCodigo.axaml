<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Premix.Views.FuncCodigo"
        Background="Black"
        Title="FuncCodigo">
                
        <Window.Styles>
                <StyleInclude Source="avares://Premix/Styles/FuncCodigoStyles.axaml"/>
        </Window.Styles>
        
        
        <Border Padding="20">
                <Grid Margin="20">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/> <!-- Header -->
                                <RowDefinition Height="Auto"/> <!-- Primeira linha de botões -->
                                <RowDefinition Height="Auto"/> <!-- Lista + Criar Meta -->
                        </Grid.RowDefinitions>
                        
                        
                        <!-- Título / Logo -->
                        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Margin = "0 0 0 30">
                                <Image Source="{SvgImage /Assets/Images/func_premix_roxa.svg}"></Image>
                        </StackPanel>
                        
                        <!-- Texto explicativo + Caixa de entrada -->
                        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="15" Margin="0 0 0 30">
                                <TextBlock Text="Para utilizar os nossos serviços acesse"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"/>
                    
                                <TextBlock Text="Insira o código da sua empresa"
                                           FontSize="14"
                                           Foreground="Gray"
                                           HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="2" Margin="0 0 0 30" VerticalAlignment="Center" HorizontalAlignment="Center">
                                
                                <!-- Caixa de texto -->
                                <TextBox Width="300"
                                         Height="50"
                                         FontSize="18"
                                         Margin="0 0 0 30"
                                         TextAlignment="Center"
                                         Watermark="xxxxxxxx"
                                         HorizontalContentAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         BorderThickness="1"
                                         CornerRadius="6"
                                         MaxLength="8"
                                         Classes="codigo"
                                         Name="txt_codigo"
                                />
                                
                                <!-- Botão Entrar -->
                                <Button Classes="entrar"
                                        Width="300" 
                                        Height="50" 
                                        CornerRadius="6"
                                        Click="OnLoginClick">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                                                <TextBlock Text="Entrar" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                </Button>
                        </StackPanel>
                </Grid>
        </Border>
</Window>
