<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="900"
             xmlns:vm="clr-namespace:Premix.ViewModels"
             Background="Black"
             Foreground="White"
             x:DataType="vm:TarefaPageViewModel"
             x:Class="Premix.Views.TarefaPageView">
    
    <Design.DataContext><vm:TarefaPageViewModel></vm:TarefaPageViewModel></Design.DataContext>
    
    <UserControl.Styles>
        <StyleInclude Source="avares://Premix/Styles/PremixStyles.axaml"/>
    </UserControl.Styles>
    
    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Primeira linha de botões -->
                <RowDefinition Height="Auto"/> <!-- Lista + Criar Meta -->
                <RowDefinition Height="Auto"/> <!-- Lista + Criar Meta -->
            </Grid.RowDefinitions>
            
            <!--HEADER-->
            <StackPanel Grid.Column="0" Grid.Row="0"  Margin="0 0 0 30">
                <TextBlock Margin="0 0 0 10" HorizontalAlignment="Left" Text="Tarefas" FontWeight="Bold" FontSize="45"></TextBlock>
            </StackPanel>
            
            <!--Top Buttons-->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 30">
                <Button Width="140" Height="40" Margin="0 0 15 0" BorderBrush="#FBCA48" BorderThickness="2" Background="Transparent" Foreground="White" CornerRadius="15">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                        <TextBlock Text="Departamento" FontSize="16" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Width="140" Height="40" Margin="0 0 15 0" BorderBrush="#FBCA48" BorderThickness="2" Background="Transparent" Foreground="White" CornerRadius="15">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                        <TextBlock Text="Funcionário" FontSize="16" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Width="140" Height="40" Margin="0 0 15 0" BorderBrush="#FBCA48" BorderThickness="2" Background="Transparent" Foreground="White" CornerRadius="15">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                        <TextBlock Text="Status" FontSize="16" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Width="140" Height="40" Margin="0 0 15 0" BorderBrush="#FBCA48" BorderThickness="2" Background="Transparent" Foreground="White" CornerRadius="15">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                        <TextBlock Text="Prioridade" FontSize="16" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <!--Botão criar-->
            <StackPanel Grid.Row="2" Margin="0 0 0 20">
                <Button Width="450" Height="45"
                        BorderBrush="Gold" BorderThickness="2"
                        Background="#FBCA48" Foreground="Black"
                        FontWeight="Bold" CornerRadius="15"
                        Command="{Binding OpenCreateMenuCommand}"
                        >
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <Image Margin="20 0 0 0" Classes="icon" Source="{SvgImage /Assets/IconsCriarPage/mais.svg}" Width="25"/>
                        <TextBlock Padding="20 0 0 0" Text="Criar Nova Tarefa" FontSize="25"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <!--Tabela e outros-->
            <!--Here it starts the table code-->
            <Border Grid.Row="3" Padding="15" BorderBrush="#FBCA48" BorderThickness="2" Background="Transparent" CornerRadius="15">
                <!-- TABELA -->
                <DataGrid
                    ItemsSource="{Binding Tarefa}"
                    AutoGenerateColumns="False"
                    HeadersVisibility="Column"
                    GridLinesVisibility="None"
                    Background="Transparent"
                    Foreground="White"
                    BorderBrush="Transparent"
                    RowHeight="45"
                    RowBackground="#141414"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nome da Tarefa" Binding="{Binding Nome}" Width="2*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                        <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" Width="3*"/>
                        <DataGridTextColumn Header="Vencimento" Binding="{Binding Vencimento}" Width="2*"/>
                        <DataGridTemplateColumn Header="Ações" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <!-- Botão Editar -->
                                        <Button Content="Editar"
                                                x:CompileBindings="False"
                                                DataContext="{Binding $parent[UserControl].DataContext}"
                                                Command="{Binding EditarTarefaCommand}"
                                                CommandParameter="{Binding $parent[DataGridRow].DataContext}"
                                                Width="80" Height="30"
                                                Background="Transparent" BorderBrush="White" Foreground="White"/>

                                        <!-- Botão Excluir -->
                                        <Button Content="Excluir"
                                                x:CompileBindings="False"
                                                DataContext="{Binding $parent[UserControl].DataContext}"
                                                Command="{Binding ExcluirTarefaCommand}"
                                                CommandParameter="{Binding $parent[DataGridRow].DataContext}"
                                                Width="80" Height="30"
                                                Background="Transparent" BorderBrush="Red" Foreground="Red"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            
            <!-- MENU DE CRIAÇÃO -->
            <ContentControl Grid.RowSpan="4" IsVisible="{Binding IsMenuCriarVisible}">
                <Border Background="#222" CornerRadius="10" Padding="20" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Novo Tarefa" FontSize="20" FontWeight="Bold"/>
                        <TextBox Watermark="Nome" Text="{Binding NovaTarefaNome}"/>
                        <TextBox Watermark="Vencimento" Text="{Binding NovaTarefaVencimento}"/>
                        <TextBox Watermark="Descrição" Text="{Binding NovaTarefaDescricao}"/>
                        
                        <TextBox Classes = "Status" Watermark="Status" Text="{Binding NovaTarefaStatusTexto}" MaxLength="8"/>
                        <CheckBox Content="Ativo" IsChecked="{Binding NovaTarefaStatus}"/>
                        
                        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                            <Button Content="Cancelar" Command="{Binding CancelarCriarTarefaCommand}"/>
                            <Button Content="Continuar" Command="{Binding ContinuarCriarTarefaCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </ContentControl>
            
            <!-- MENU DE ATRIBUIÇÃO -->
            <ContentControl Grid.RowSpan="4" IsVisible="{Binding IsMenuAtribuirVisible}">
                <Border Background="#222" CornerRadius="10" Padding="20" Width="400"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Atribuir Tarefa" FontSize="20" FontWeight="Bold"/>

                        <TextBlock Text="Departamentos:" FontWeight="Bold"/>
                        <ComboBox ItemsSource="{Binding Departamentos}"
                                  SelectedItem="{Binding SelectedDepartamento, Mode=TwoWay}"
                                  Width="250" />

                        <TextBlock Text="Funcionário:" FontWeight="Bold" Margin="0,10,0,0"/>
                        <ComboBox ItemsSource="{Binding Funcionarios}"
                                  SelectedItem="{Binding SelectedFuncionario, Mode=TwoWay}"
                                  Width="250" />

                        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Cancelar" Command="{Binding CancelarAtribuirTarefaCommand}"/>
                            <Button Content="Salvar"   Command="{Binding SalvarAtribuicaoCommand}"/>
                            <Button Content="Voltar" Command="{Binding VoltarAtribuicaoCommand}"></Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </ContentControl>

            
            
            <!-- MENU DE EDIÇÃO -->
            <ContentControl Grid.RowSpan="4" IsVisible="{Binding IsMenuEditarVisible}">
                <Border Background="#222" CornerRadius="10" Padding="20" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Editar Departamento" FontSize="20" FontWeight="Bold"/>
                        <TextBox Watermark="Nome" Text="{Binding EditarTarefaNome}"/>
                        <TextBox Watermark="Vencimento" Text="{Binding EditarTarefaVencimento}"/>
                        <TextBox Watermark="Descrição" Text="{Binding EditarTarefaDescricao}"/>
                        
                        <TextBox Classes = "Status" Watermark="Código" Text="{Binding EditarTarefaStatusTexto}" MaxLength="8"/>
                        <CheckBox Content="Ativo" IsChecked="{Binding EditarTarefaAtivo}"/>
                        
                        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                            <Button Content="Cancelar" Command="{Binding CancelarEdicaoTarefaCommand}"/>
                            <Button Content="Salvar" Command="{Binding SalvarEdicaoTarefaCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </ContentControl>
        </Grid>
    </Border>
</UserControl>
