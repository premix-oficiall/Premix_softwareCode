                 <SolidColorBrush x:Key="FuncPrimaryHoverForeground">White</SolidColorBrush>
                 
                 <!--Paleta de cores-->
                 <SolidColorBrush x:Key="Col.Text" Color="White"/>
                 <SolidColorBrush x:Key="Col.Border" Color="#3B1D65"/>
                 <SolidColorBrush x:Key="Col.Purple" Color="#3B1D65"/>
             </Application.Resources>
             
             <!--Código tabela-->
             <Application.Styles>
                 <FluentTheme />
