                 <SolidColorBrush x:Key="PrimaryActiveHoverBackground">#FBCA48</SolidColorBrush>
                 <SolidColorBrush x:Key="PrimaryHoverForeground">White</SolidColorBrush>
                 
                 <!--hover das telas do funcionário-->
                 <SolidColorBrush x:Key="FuncPrimaryBackgroundGradient">#1F1F1F</SolidColorBrush>
